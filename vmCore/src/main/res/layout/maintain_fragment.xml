<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/bt_state_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mf_state_info"
            />
        <Button
            android:id="@+id/bt_maintain_tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mf_maintain_tools"
            />
        <Button
            android:id="@+id/bt_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mf_update"
            />
        <Button
            android:id="@+id/bt_reboot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mf_reboot"
            />
    </LinearLayout>
    <ListView
        android:id="@+id/lv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
</LinearLayout>
